<html>
    <head>
        <title>
            <%= title %>
        </title>
     
     <script src="https://kit.fontawesome.com/743557890a.js" crossorigin="anonymous"></script>
     <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 id="page-heading"><i class="fas fa-address-book"></i> My Contacts List</h1>
        <div id="contact_list_cont">
            <ul id="ul">
                <% for(let i of contact_list){%>
                 <li id="list">
                     <div id="div"><span ><%= i.name %></span><span><%= i.phone %></span>
                        <span class="delete">
                           <a href="/delete/?phone=<%= i.phone %>&name=<%= i.name %>"> <i class="icon fas fa-window-close"></i></a>
                        </span></div>
                     
                 </li>
                    <% }%>
            </ul>
        </div><br/>
        <form action="/create-contact" method="POST">
            <input type="text" name="name" placeholder="enter name" required>
            <input type="number" name="phone" placeholder="enter phone no">
            <button type="submit"> Add contact</button>
        </form>
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>